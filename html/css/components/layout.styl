aside
	background l_rojo
	display flex
	height calc(100% - 70px)
	position fixed
	width 17%
	
	ul
		padding 0
		width 100%
		padding-top 35px
		
		li
			list-style-type none
			padding 1em 0
				
			a
				color white
				margin-left 10%
				
				&:active
				&:visited
				&:focus
				&:hover
					color white
					text-decoration none
			
			&:hover
				background l_azul
				
		.active
			background l_azul

main
	margin-left auto
	margin-right auto
	margin-top 35px
	padding 1em
	position absolute
	right 0
	width calc(100% - 17%)